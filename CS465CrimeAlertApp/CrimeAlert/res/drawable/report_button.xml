<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FF00FF00"
                android:endColor="#FF00FF00"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#FF00FF00" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#FFFFFF00"
                android:startColor="#FFFFFF00"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#FFFFFF00" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#FF22FF22"
                android:startColor="#FF22FF22"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#FF22FF22" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
